<!DOCTYPE html>
<html>
<head>
  <title>Travelflow</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
  <div id='page_body'>
<header>
  <ul>
      <li><%= link_to('TravelFlow', root_path)%>
      <li><%= link_to('Travelers', users_path) %></li>
    <% if session[:user_id] %>
      <li><%= link_to('Ask Question', new_question_path) %></li>
      <li class='ajax_form'><%= link_to('logout', logout_path) %></li>
      <% else %>
      <li class='ajax_form_login'><%= link_to('login', new_user_path) %></li> <!-- #FIXME AJAX SIGNIN FORM -->
      <li class='ajax_form'><%= link_to('signup', new_user_path) %></li>
      <li><%= link_to('Ask Question', new_user_path) %></li>

    <% end %>
  </ul>
<%= form_for @user, url: login_path, html: {id: "user_login_form"} do |f| %>
  <%=f.text_field :email, placeholder: "Email" %>
  <%=f.password_field :password, placeholder: "Password" %>
  <%=f.submit "Login"%>
  <h4><%= flash[:error] %></h4>
<%end%>
</header>


<body>
  <div class='container'>
    <%= yield %>
  </div>
</body>
  </div>
</html>
