<h1>Make an new TravelFlow account below, man.</h1>

<%= form_for @user, url: signup_path, html: {id: "new_user_form"} do |f|  %>
  <% if @user.errors.any?%>
  <div id="errorExplanation">
    <h3><% pluralize(@user.errors.count, "error")%>
      Your account was not created because:</h3>
      <ul>
        <%@user.errors.full_messages.each do |msg| %>
          <li><%=msg%></li>
          <%end%>
        </ul>
      </div>
      <%end%>
  <%=f.text_field :name, placeholder: "Name" %>
  <%=f.text_field :email, placeholder: "Email" %>
  <%=f.password_field :password, placeholder: "Password" %>
  <%=f.submit "Start your TravelFlow!"%>
<%end%>